# ──────────────────────────────────────────────
# Fleet Cognitive Intelligence Platform — .env
# ──────────────────────────────────────────────

# PostgreSQL connection string (async driver)
DATABASE_URL=postgresql+asyncpg://fcip:fcip_pass@localhost:5432/fcip_db

# SQLite alternative (no Docker/Postgres required for local dev)
# DATABASE_URL=sqlite+aiosqlite:///./test.db

# JWT signing key — change this to a long random string in production!
SECRET_KEY=change-me-to-a-long-random-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Set to true for SQL query logging
DEBUG=false
