# ──────────────────────────────────────────────
# Fleet Cognitive Intelligence Platform — .env
# ──────────────────────────────────────────────

# PostgreSQL connection string (async driver)
DATABASE_URL=postgresql+asyncpg://fcip:fcip_pass@localhost:5432/fcip_db

# SQLite alternative (no Docker/Postgres required for local dev)
# DATABASE_URL=sqlite+aiosqlite:///./test.db

# JWT signing key — change this to a long random string in production!
SECRET_KEY=change-me-to-a-long-random-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Set to true for SQL query logging
DEBUG=false

# App Setup (Frontend deep links)
APP_BASE_URL=http://localhost:3000

# Email (Resend.com)
# Set to "disabled" or leave empty to skip email sending
RESEND_API_KEY=re_...
EMAIL_FROM=Axiom <noreply@axiom.fleet>

# Billing (Stripe.com)
# Set to "disabled" or leave empty for Mock/Dev mode
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_TIER2=price_...
STRIPE_PRICE_TIER3=price_...
